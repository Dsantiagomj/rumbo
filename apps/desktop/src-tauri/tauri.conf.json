{
  "productName": "Rumbo",
  "version": "0.0.0",
  "identifier": "com.rumbo.desktop",
  "build": {
    "beforeDevCommand": "cd ../.. && pnpm --filter @rumbo/web dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../.. && pnpm --filter @rumbo/web build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rumbo",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
