{
  "name": "rumbo",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo dev --filter=@rumbo/api --filter=@rumbo/web",
    "dev:web": "turbo dev --filter=@rumbo/api --filter=@rumbo/web",
    "dev:api": "turbo dev --filter=@rumbo/api",
    "dev:mobile": "turbo dev --filter=@rumbo/api --filter=@rumbo/mobile",
    "dev:desktop": "turbo dev --filter=@rumbo/api --filter=@rumbo/desktop",
    "build": "turbo build",
    "db:generate": "turbo db:generate --filter=@rumbo/db",
    "db:migrate": "turbo db:migrate --filter=@rumbo/db",
    "db:seed": "turbo db:seed --filter=@rumbo/db",
    "db:studio": "turbo db:studio --filter=@rumbo/db",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css}": "biome check --write --no-errors-on-unmatched"
  },
  "pnpm": {
    "overrides": {
      "@esbuild-kit/core-utils>esbuild": ">=0.25.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "latest",
    "vitest": "^4.0.18"
  }
}
