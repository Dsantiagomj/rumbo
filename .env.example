# Database
# Local dev: uses Docker PostgreSQL (started by `pnpm infra:up`)
DATABASE_URL=postgresql://rumbo:rumbo_dev@localhost:5432/rumbo?sslmode=disable
# Production: uses Neon PostgreSQL (get connection string from Neon dashboard)
# DATABASE_URL=postgresql://user:password@host/rumbo?sslmode=require

# API
API_PORT=3000
API_URL=http://localhost:3000

# Web
VITE_API_URL=http://localhost:3000

# Auth (Better Auth)
BETTER_AUTH_SECRET=dev-secret-change-in-production
BETTER_AUTH_URL=http://localhost:3000
APP_URL=http://localhost:5173

# CORS (comma-separated origins allowed by the API)
CORS_ORIGINS=http://localhost:5173

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Rumbo <noreply@rumbo.app>
